        </record>
        <record id="status_pending_parameter" model="ir.config_parameter">
            <field name="key">status_pending</field>
            <field name="value">pending</field>
        </record>
        <record id="status_sent_parameter" model="ir.config_parameter">
            <field name="key">status_forward</field>
